                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Column="0"  FontSize="20" Text="Major Key&#10;"/>
                        <Label Grid.Column="1"  FontSize="20" Text="Relative Minor Key"/>

                        <Label Grid.Row="1" Grid.Column="0" Text="C Major"/>
                        <Label Grid.Row="1" Grid.Column="1" Text="A Minor&#10;"/>

                        <Label Grid.Row="2" Grid.Column="0" Text="G Major"/>
                        <Label Grid.Row="2" Grid.Column="1" Text="E Minor&#10;"/>

                        <Label Grid.Row="3" Grid.Column="0" Text="D Major"/>
                        <Label Grid.Row="3" Grid.Column="1" Text="B Minor&#10;"/>

