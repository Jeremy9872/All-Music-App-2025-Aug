            <Label Text="E Major scale: E - F# - G# - A - B - C# - D# - E 
                   &#10;6th note = C#, C# Minor is the relative minor of E Major." FontSize="18" Margin="30,4,0,50" TextColor="LightGray"/>
            
             <Button x:Name="backToLastPage" 
                     Text="Back"
                     HorizontalOptions="Start"
                     BackgroundColor="#ebebeb"
                     TextColor="Gray"
                     Clicked="BackClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
